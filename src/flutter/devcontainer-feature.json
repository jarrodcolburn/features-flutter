{
    "name": "Flutter",
    "id": "flutter",
    "version": "0.0.1",
    "description": "Install the Flutter SDK",
    "containerEnv": {
        "FLUTTER_HOME" : "/usr/local/flutter",
        "FLUTTER_ROOT": "/usr/local/flutter",
        "PATH": "/usr/local/flutter/bin:${PATH}"
    },
    "options": {
        "channel": {
            "type": "string",
            "enum": [
                "stable",
                "beta",
                "master"
            ],
            "default": "stable",
            "description": "Flutter channel"
        },
        "version": {
            "type": "string",
            "default": "3.3.9",
            "description": "Flutter version"
        }
    }
}